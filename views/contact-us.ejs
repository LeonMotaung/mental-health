<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-poppins bg-gray-100 flex flex-col h-screen">

    <!-- Navbar -->
    <nav class="bg-teal-700 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-2xl font-semibold">Mental Health Xcellerators</a>
            <button id="navbar-toggle" class="lg:hidden text-white" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    &#9776; <!-- Hamburger icon -->
                </span>
            </button>
            <div id="navbar-menu" class="lg:flex space-x-6 hidden lg:block">
                <a href="/about-us" class="nav-link">About Us</a>
                <a href="/contact-us" class="nav-link">Contact Us</a>
                <a href="/user-profile" class="nav-link">User Profile</a>
                <a href="/logout" class="nav-link">Log Out</a>
                <a href="/dashboard" class="nav-link">Dashboard</a>
                
            </div>
        </div>
    </nav>

    <!-- Header Section -->
    <section class="bg-teal-700 text-white py-12 text-center">
        <h1 class="text-4xl font-bold mb-2">Contact Us</h1>
        <p class="text-lg">Feel free to reach out with any questions or concerns. We're here to help!</p>
    </section>

    <!-- Main Content -->
    <main class="container mx-auto mt-12 px-4">
        <form action="/submit-contact" method="POST" class="bg-white p-8 rounded-lg shadow-md">
            <!-- Name Field -->
            <div class="mb-6">
                <label for="name" class="block text-lg font-medium text-gray-700">Name</label>
                <input type="text" id="name" name="name" class="form-input mt-2 p-2 w-full border border-teal-400 rounded-md" required placeholder="Enter your name">
            </div>
        
            <!-- Email Field -->
            <div class="mb-6">
                <label for="email" class="block text-lg font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" class="form-input mt-2 p-2 w-full border border-teal-400 rounded-md" required placeholder="Enter your email">
            </div>
        
            <!-- Message Field -->
            <div class="mb-6">
                <label for="message" class="block text-lg font-medium text-gray-700">Message</label>
                <textarea id="message" name="message" class="form-input mt-2 p-2 w-full border border-teal-400 rounded-md" rows="4" required placeholder="Write your message here"></textarea>
            </div>
        
            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="bg-teal-700 text-white py-2 px-6 rounded-lg hover:bg-teal-800">Submit</button>
            </div>
        </form>
        
    </main>

    <!-- Footer -->
    <footer class="bg-teal-700 text-white py-4 mt-auto text-center">
        <div class="container mx-auto">
            <p>&copy; 2024 Your Application. All rights reserved.</p>
        </div>
    </footer>

    <!-- Tailwind JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Navbar Toggle Script -->
    <script>
        document.getElementById('navbar-toggle').addEventListener('click', function() {
            const navbarMenu = document.getElementById('navbar-menu');
            navbarMenu.classList.toggle('hidden'); 
            navbarMenu.classList.toggle('lg:flex'); 
        });
    </script>
</body>
</html>
